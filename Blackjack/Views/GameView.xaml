<UserControl x:Class="Blackjack.Views.GameView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:cal="http://www.caliburnproject.org"
			 xmlns:viewModels="clr-namespace:Blackjack.ViewModels"
			 mc:Ignorable="d"
			 d:DesignHeight="300" d:DesignWidth="300"
			 d:DataContext="{d:DesignInstance viewModels:GameViewModel, IsDesignTimeCreatable=True}"
			 cal:Bind.AtDesignTime="True">
    <Border Background="{StaticResource MDH.Palette.Grey.050}"
			CornerRadius="2">
        <StackPanel Orientation="Vertical"
					VerticalAlignment="Center"
					HorizontalAlignment="Center">
            <Label Content="{Binding Player.Name}"
				   FontWeight="Bold"
				   FontSize="18pt"
				   Margin="0 0 0 40"/>

        </StackPanel>
    </Border>

</UserControl>
